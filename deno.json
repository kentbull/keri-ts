{
  "tasks": {
    "start": "deno run --allow-ffi --allow-sys --allow-net --allow-env --allow-read --allow-write mod.ts",
    "kli": "deno run --allow-sys --allow-net --allow-env --allow-read --allow-write mod.ts",
    "test": "deno run --allow-sys --allow-net --allow-env --allow-read --allow-write --allow-run test/runner.ts",
    "test:unit": "deno run --allow-sys --allow-net --allow-env --allow-read --allow-write --allow-run test/runner.ts --unit",
    "test:integration": "deno run --allow-sys --allow-net --allow-env --allow-read --allow-write --allow-run test/runner.ts --integration",
    "test:watch": "deno run --allow-sys --allow-net --allow-env --allow-read --allow-write --allow-run test/runner.ts --watch",
    "test:coverage": "deno run --allow-sys --allow-net --allow-env --allow-read --allow-write --allow-run test/runner.ts --coverage",
    "coverage": "deno coverage coverage --html"
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": { "rules": { "exclude": ["no-explicit-any"] } },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.22",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "effection": "npm:effection@3.6.0",
    "lmdb": "npm:lmdb@3.4.2",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8"
  }
}
